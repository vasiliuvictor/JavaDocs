  <modelVersion>4.0.0</modelVersion>
  <groupId>com.java8training</groupId>
  <artifactId>examples-and-exercises</artifactId>
  <name>Java 8 Training Examples and Exercises</name>
  <version>0.0.1-SNAPSHOT</version>
